<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="StockMon.TESTVIEWPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="5, 10" Padding="5" BackgroundColor="Bisque">
            <Grid Margin="8,-2"
                ColumnDefinitions="50*, 50*"
                ColumnSpacing="8"
                HorizontalOptions="FillAndExpand">
                <Label x:Name="LongNameLabel" Grid.Column="0" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Start" FontSize="12" Text="ABCDEFGHIJKLMNOP"/>
                <Label x:Name="CodeLabel" Grid.Column="1" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" FontSize="12">
                    <Label.Text>
                        <MultiBinding StringFormat="{}{0}={1}">
                            <Binding Path="quoteType" />
                            <Binding Path="exchange" />
                        </MultiBinding>
                    </Label.Text>
                </Label>
            </Grid>
            <Label x:Name="SymbolLabel" Grid.Column="2" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="End" FontSize="12" FontAttributes="Bold"
                    Text="{Binding symbol}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
